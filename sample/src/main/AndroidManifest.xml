<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fcannizzaro.sample">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:screenOrientation="sensor"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:name="com.fcannizzaro.sample.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.fcannizzaro.sample.TabSample" />
        <activity android:name="com.fcannizzaro.sample.TabClassicSample" />
        <activity android:name="com.fcannizzaro.sample.TextSample" />
        <activity android:name="com.fcannizzaro.sample.DotsSample" />
        <activity android:name="com.fcannizzaro.sample.ProgressSample" />
    </application>

</manifest>
